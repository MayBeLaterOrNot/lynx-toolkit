<Window x:Class="WikiTable.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WikiTable" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="8">
            <Button Content="Paste from clipboard and convert" Padding="8 0 8 0" Click="Refresh_Click"/>
            <CheckBox Margin="8 0 0 0" x:Name="IncludeHeader" IsChecked="True" Content="Header" VerticalAlignment="Center" Click="Refresh_Click"/>
        </StackPanel>
        <TextBox x:Name="textBox1" Grid.Row="1" BorderThickness="0 1 0 1" AcceptsReturn="True" FontFamily="Consolas"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="8">
            <Button Margin="8 0 0 0" Content="Copy to clipboard" Padding="8 0 8 0" Click="Copy_Click"/>
        </StackPanel>
    </Grid>
</Window>
